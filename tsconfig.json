{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "target": "es6",
    "lib": [
      "es2015",
      "es2016",
      "dom",
      "es2017",
      "es6",
      "es5"
    ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "public/javascripts/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}