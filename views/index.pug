extends layout

block content
  h1 ChatApp
  div(id = "messages")
  form(id = "messageForm")
    input(type = "text", name = "message" placeholder = "message")
    button(type = "submit") Send
  button(type = "submit" id = "shareLocation") Share location

  script(id = "messagesTemplate", type = "text/html")
    div
      p {{message}}
block scripts
  script(src = "https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js")
  script(src = "https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js")
  script(src = "https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js")
  script(src = "/socket.io/socket.io.js")
  script(src = "/javascripts/chat.js")
  
